<%= render 'admin_navbar'%>

<div class="mt-3 bg-secondary w-25 d-flex flex-column justify-content-center mx-auto rounded py-5" style=" --bs-bg-opacity: .15;">

  <h2 style = "text-decoration: underline;text-decoration-thickness: 3px;">Edit Profile</h2>

  <%= form_with url: "/admin_dashboard/update",method: :patch, local: true do |f| %>

    <div class="field">
      <%= f.label 'First Name:' %></br>
      <%= f.text_field :first_name, value: @profile.first_name %>
    </div>

    <div class="field">
      <%= f.label 'Last Name:' %></br>
      <%= f.text_field :last_name, value: @profile.last_name %>
    </div>

    <div class="field">
      <%= f.label 'Gender:' %></br>
      <%= f.text_field :gender, value: @profile.gender %>
    </div>

    <div class="field">
      <%= f.label 'Age:' %></br>
      <%= f.number_field :age, value: @profile.age %>
    </div>

    <div class="field">
      <%= f.label 'Address:' %></br>
      <%= f.text_field :address, value: @profile.address %>
    </div>

    <div class="field">
      <%= f.label 'Email:' %></br>
      <%= f.text_field :email, value: @profile.email %>
    </div>

    <div class="my-3">
      <%= f.submit%>
    </div>

    <%end%>

    <div>
    <button><%= link_to 'go back', view_profile_path({email:params[:email]}), style:"text-decoration:none; color:black"%></button>
    </div>

  </div>