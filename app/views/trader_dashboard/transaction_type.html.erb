<%= render 'navbar' %>
</br>
<%= params[:button] + ' ' + 'transaction' %>

<%= form_with url: "/trader_dashboard/create" do |f| %>


  <%= f.hidden_field :company, value: @stocks.name %>
  <%= f.hidden_field :symbol, value: @stocks.symbol %>

  <h1>
    <%= @stocks.name + ' - ' + @stocks.symbol%><br />
  </h1>

  <p>
    <%= f.label 'Price' %>
    <%= f.text_field :current_price, value: @stocks.price, readonly: true %>
  </p>

  <% if params[:button] == 'buy'%>
    <p>
      <%= f.label 'No. of Stocks'%></br>
      <%= f.number_field :shares , min: 1%>
    </p>
    <% else %>
    <p>
      <%= f.label 'No. of Stocks'%></br>
      <%= f.number_field :shares, max: -1 %>
    </p>

  <%end%>
  
  
  

  <p>
    <%= f.submit params[:button] %>
  </p>
  
<% end %>

