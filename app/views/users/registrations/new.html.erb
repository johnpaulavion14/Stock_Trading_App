<div class="home_bg py-5">
  <div class="w-50 text-center text-bg-primary p-5 mx-auto rounded-4">
    <h1 id="title_name">StocK-InfinI-TradE</h1>
    </br>
    <h2 id="sign_up" class="text-dark">Trader Sign up</h2>

      <div class="row">
        <div class="col text-dark">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
          <%= f.label 'First Name' %><br />
          <%= f.text_field :first_name, autofocus: true, required: true, class:"text-center"%>
          </div>

          <div class="field">
          <%= f.label 'Last Name' %><br />
          <%= f.text_field :last_name, autofocus: true,required: true, class:"text-center" %>
          </div>

          <div class="field">
          <%= f.label 'Gender' %><br />
          <%= f.text_field :gender, autofocus: true, autocomplete: "gender",required: true, class:"text-center" %>
          </div>

          <div class="field">
          <%= f.label 'Age' %><br />
          <%= f.number_field :age, autofocus: true, autocomplete: "age",required: true, class:"text-center" %>
          </div>

          <div class="field">
          <%= f.label 'Address' %><br />
          <%= f.text_field :address, autofocus: true, autocomplete: "address",required: true, class:"text-center" %>
          </div>

          <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",required: true, class:"text-center" %>
          </div>

          <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password",required: true, class:"text-center" %>
          </div>

          <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password",required: true, class:"text-center" %>
          </div>

          </br>
          <div class="actions">
          <%= f.submit "Sign Up" ,class:"btn btn-success" %>
          </div>
          <% end %>
          </br>
          <%= button_to "go back", root_path, method: :get, class:"btn btn-danger"%>
        </div>
      </div>
    </div>
  </div>
</div>

